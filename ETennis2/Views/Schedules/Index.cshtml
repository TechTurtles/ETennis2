@model IEnumerable<ETennis2.Model.Schedule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5 row">
    <div class="col-6">
        <h2 class="text-info">Schedules</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Schedule</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TennisUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-success">&nbsp;<i class="fas"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-success">&nbsp;<i class="fas"></i> Detail</a>
                <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-success">&nbsp;<i class="fas fas-minus"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
