@using Microsoft.AspNetCore.Identity
@using ETennis2.Model

@inject SignInManager<TennisUser> SignInManager
@inject UserManager<TennisUser> UserManager

@model ETennis2.Model.TennisUser
@{
    ViewData["Title"] = "Create";
}
<h2 class="mt-5 text-info">Create Your Account</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nickname"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nickname" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" value="@UserManager.GetUserName(User)" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dob"></label>
            </div>
            <div class="col-5">
                <input asp-for="Dob" class="form-control" />
            </div>
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Biography"></label>
            </div>
            <div class="col-5">
                <input asp-for="Biography" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
