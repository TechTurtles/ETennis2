@model IEnumerable<ETennis2.Model.Event>

@{
    ViewData["Title"] = "AllEvents";
}

<div class="mt-5 row">
    <div class="col-6">
        <h2 class="text-info">Events</h2>
    </div>
</div>
<table class="table table-striped border">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <form method="post" asp-controller="Schedules" asp-action="Create">
                        @*<input asp-for="EventId" class="form-control" />
                        <input asp-for="Name" class="form-control" />*@
                        <a asp-controller="Schedules" asp-action="Create" class="btn btn-primary">&nbsp;<i class="fas fa-plus"></i> Enroll</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


