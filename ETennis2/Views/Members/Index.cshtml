@using Microsoft.AspNetCore.Identity
@using ETennis2.Model

@inject SignInManager<TennisUser> SignInManager
@inject UserManager<TennisUser> UserManager

@model IEnumerable<ETennis2.Model.TennisUser>

@{
    ViewData["Title"] = "Index";
}
<h2>Your Account</h2>
@{int counter = 0;
    foreach (var item in Model)
    {
        if (@UserManager.GetUserName(User) == item.Email)
        {
            <table>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Dob)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dob)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                    </tr>
                </tbody>
            </table>
            <p>You are(@UserManager.GetUserName(User))  </p>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">&nbsp;<i class="fas fa-plus"></i> Update Details</a>
            counter++;
        }

    }



    if (counter == 0)
    {
        <p>Please create a account</p>
        <a asp-action="Create" class="btn btn-primary">&nbsp;<i class="fas fa-plus"></i> Create Account</a>

    }
}
